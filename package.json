{
  "name": "@denotarius/denotarius-backend",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "our family",
  "scripts": {
    "build": "yarn clean && babel ./src --out-dir dist --copy-files --extensions '.ts'",
    "clean": "rimraf dist",
    "dev": "cross-env NODE_OPTIONS='--max-http-header-size 32768' NODE_ENV=development yarn run-dev",
    "run-dev": "ts-node-dev --transpile-only src/server.ts",
    "generate-types": "openapi-typescript ./node_modules/@blockfrost/openapi/openapi.yaml --output ./src/types/openapi.ts",
    "lint": "eslint ./src/**/*.ts",
    "start": "yarn build && node --max-http-header-size=32768 dist/server.js",
    "start-cluster": "pm2 start pm2.yaml",
    "stop-cluster": "pm2 stop all && pm2 delete all",
    "type-check": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "4.1.0",
    "@emurgo/cardano-serialization-lib-nodejs": "^10.0.4",
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "^8.0.0",
    "axios": "^0.26.1",
    "config": "3.3.7",
    "cross-env": "^7.0.3",
    "fastify": "4.0.2",
    "npm-run-all": "^4.1.5",
    "pm2": "5.2.0",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.9",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/config": "0.0.41",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "openapi-typescript": "^5.2.0",
    "prettier": "2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "1.1.8",
    "typescript": "^4.6.3"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=14"
  }
}
