{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "target": "es2020",
      "module": "es2022",
      "moduleResolution": "node",
      "declaration": true,
      "isolatedModules": true,
      "strict": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": "./",
      "paths": {},
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"],
    "exclude": [
      "./dist"
    ]
}